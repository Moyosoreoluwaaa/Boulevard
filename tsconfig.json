
{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
      "strict": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "@core/*": [
          "src/core/*"
        ],
        "@data/*": [
          "src/data/*"
        ],
        "@presentation/*": [
          "src/presentation/*"
        ],
        "@infrastructure/*": [
          "src/infrastructure/*"
        ],
        "@config/*": [
          "src/config/*"
        ]
      }
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ]
  }